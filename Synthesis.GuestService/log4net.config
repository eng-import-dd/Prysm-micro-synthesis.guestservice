<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\\GuestServiceLogs.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="30" />
    <maximumFileSize value="100MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date - %message%newline" />
    </layout>
  </appender>
  <appender name="GelfUdpAppender" type="Gelf4net.Appender.GelfUdpAppender, Gelf4net">
    <remoteHostName value="nonprod-logs.synthesize.com" />
    <remotePort value="12201" />
    <layout type="Gelf4net.Layout.GelfLayout, Gelf4net">
      <conversionPattern value="%m" />
      <additionalFields value="App:GuestService,Level:%p,Stacktrace:%stacktrace{6}" />
      <logStackTraceFromMessage value="true" />
      <includeLocationInformation value="false" />
      <facility value="localhost" />
    </layout>
  </appender>
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date - %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="RollingFileAppender" />
    <appender-ref ref="GelfUdpAppender" />
    <appender-ref ref="Console" />
  </root>
</log4net>
